<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiong.lockedgallery.HomeActivity" >

    <LinearLayout
        android:id="@+id/home_activity_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/home_activity_text_margin"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/home_activity_text_padding"
            android:onClick="importImages"
            android:background="@drawable/btn_bg"
            android:text="@string/home_activity_text_import" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/home_activity_text_margin"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/home_activity_text_padding"
            android:onClick="importWebImages"
            android:background="@drawable/btn_bg"
            android:text="@string/home_activity_text_import2" />
    </LinearLayout>

    <GridView
        android:id="@+id/home_activity_grid"
        android:layout_above="@id/home_activity_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/home_activity_text_padding"
        android:numColumns="3" >
    </GridView>

    
</RelativeLayout>